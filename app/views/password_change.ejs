<%- include(rootpath+'/partials/header') %>
<h1 class="h1__upline">Administrez vos informations</h1>
<h1>Compte utilisateur</h1>
<section class="section--without_border">
    <h2>Changez votre mot de passe de connexion</h1>
        <form action="/user/profil/changepassword" method="post">
            <label class="form--labelBox" for="user_oldpassword">
                <span class="form--label form--label--required">Votre mot de passe actuel</span>
                <input class="form--input" type="password" name="user_oldpassword" id="user_oldpassword"
                    placeholder="********" required="true"  value="<%= locals.fields ? fields.user_oldpassword : ''%>">
            </label>
            <label class="form--labelBox" for="user_newpassword">
                <span class="form--label form--label--required">Votre nouveau mot de passe</span>
                <input class="form--input" type="password" name="user_newpassword" id="user_newpassword"
                    placeholder="********" required="true">
            </label>
            <label class="form--labelBox" for="user_newpasswordconfirm">
                <span class="form--label form--label--required">Confirmez votre nouveau mot de passe</span>
                <input class="form--input" type="password" name="user_newpasswordconfirm" id="user_newpasswordconfirm"
                    placeholder="********" required="true">
            </label>
            <button class="form--submit" type="submit">submit</button>
        </form>
</section>
<%- include(rootpath+'/partials/footer') %>